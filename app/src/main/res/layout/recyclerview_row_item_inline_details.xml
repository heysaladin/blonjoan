    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:elevation="4dp"
    android:padding="5dp">
    <CheckBox
    android:id="@+id/checkBox_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:buttonTint="#ff5500"
    app:buttonTint="#ff5500"
    tools:ignore="MissingPrefix"
    android:text="" />
    <ImageView
    android:id="@+id/image"
    android:layout_width="60dp"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:layout_toRightOf="@+id/checkBox_3"
    android:src="@drawable/tempe" />
    <TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/image"
    android:gravity="bottom|left"
    android:paddingBottom="5dp"
    android:text="Tempe"
    android:textSize="18sp" />
    <TextView
    android:id="@+id/short_description_3"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_below="@+id/tvTitle"
    android:layout_toRightOf="@+id/image"
    android:gravity="top|left"
    android:text="5000/50g"
    android:textColor="#8b8b8b" />
    <TextView
    android:id="@+id/short_currency_3"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_toLeftOf="@+id/cardview_image_last_3"
    android:gravity="bottom|right"
    android:text="Rp."
    android:textColor="#8b8b8b" />
    <TextView
    android:id="@+id/cardview_list_price_3"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_alignParentBottom="true"
    android:layout_toStartOf="@+id/cardview_image_last_3"
    android:gravity="top|right"
    android:paddingBottom="5dp"
    android:text="4.500"
    android:textSize="18sp" />
    <ImageView
    android:id="@+id/cardview_image_last_3"
    android:layout_width="20dp"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="2dp"
    android:foregroundGravity="right"
    android:src="@drawable/menu_dots_vertical" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>