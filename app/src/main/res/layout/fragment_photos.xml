<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        />

<LinearLayout
    android:layout_marginTop="-150dp"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/header_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/card_view_image_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="Name of Product"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/card_view_image_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginHorizontal="10dp"
                android:text="Bumbu Dapur"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/android_card_view_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="4dp"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="" />

            <ImageView
                android:id="@+id/cardview_image"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/checkBox"
                android:src="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/cardview_list_title"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/cardview_image"
                android:gravity="bottom|left"
                android:paddingBottom="5dp"
                android:text="Viral Android"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/short_description"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/cardview_list_title"
                android:layout_toRightOf="@+id/cardview_image"
                android:gravity="top|left"
                android:text="200/kh"
                android:textColor="#8b8b8b" />

            <TextView
                android:id="@+id/short_currency"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/cardview_image_last"
                android:gravity="bottom|right"
                android:text="Rp."
                android:textColor="#8b8b8b" />

            <TextView
                android:id="@+id/cardview_list_price"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/cardview_image_last"
                android:gravity="top|right"
                android:paddingBottom="5dp"
                android:text="4.500"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/cardview_image_last"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="2dp"
                android:foregroundGravity="right"
                android:src="@drawable/ic_home_black_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
